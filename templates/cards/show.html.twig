{% extends 'base.html.twig' %}

{% block title %}Cards{% endblock %}

{% block body %}
    <h1>Cards</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>HP</th>
                <td>{{ card.HP }}</td>
            </tr>
            <tr>
                <th>Attack</th>
                <td>{{ card.attack }}</td>
            </tr>
            <tr>
                <th>Shield</th>
                <td>{{ card.shield }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ card.name }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ card.cost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cards_index') }}">back to list</a>

    <a href="{{ path('cards_edit', {'id': card.id}) }}">edit</a>

    {{ include('cards/_delete_form.html.twig') }}
{% endblock %}

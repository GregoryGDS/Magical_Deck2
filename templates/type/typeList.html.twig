
<title>Type list</title>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des types</h1>
    <ul>
        {# légèrement différent de php avec foreach editorList as editor #}
        {% for entity in entities %}
            <li>
                {{ entity.name}}
                <input type='color' value="{{ entity.cardColor}}" disabled>
                <a href="{{ path('edit-type',{'id': entity.id})}}">Modifier</a>
                {#<a href="{{ path('edit-type',{'id': entity.id})}}">Supprimer</a>#}
            </li>
        {% endfor %}
    </ul>
</div>
